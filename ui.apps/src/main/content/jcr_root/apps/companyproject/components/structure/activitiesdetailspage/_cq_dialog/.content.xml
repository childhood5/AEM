<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
     <items jcr:primaryType="nt:unstructured">
      <tabs jcr:primaryType="nt:unstructured">
       <items
         jcr:primaryType="nt:unstructured"
         sling:hideChildren="permissions">
         <activity
             jcr:primaryType="nt:unstructured"
             jcr:title="Activity"
             sling:orderBefore="basic"
             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
             <items jcr:primaryType="nt:unstructured">
              <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
               <items jcr:primaryType="nt:unstructured">
               	  <iconActivity
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/foundation/form/select"
                      class="cq-dialog-select-media"
                      emptyText="Select"
                      fieldLabel="Icon"
                      id="mediaId"
                      multiple="{Boolean}false"
                      name="./iconActivity">
                      <items jcr:primaryType="nt:unstructured">
                          <activity_horseRiding
                              jcr:primaryType="nt:unstructured"
                              text="Activity_HorseRiding"
                              value="Activity_HorseRiding"/>
                          <golf
                              jcr:primaryType="nt:unstructured"
                              text="Golf"
                              value="Golf"/>
                          <activity_activityChildren
                              jcr:primaryType="nt:unstructured"
                              text="Activity_ActivityChildren"
                              value="Activity_ActivityChildren"/>
                          <cure
                              jcr:primaryType="nt:unstructured"
                              text="Cure"
                              value="Cure"/>
                          <casino
                              jcr:primaryType="nt:unstructured"
                              text="Casino"
                              value="Casino"/>
                          <gastronomy
                              jcr:primaryType="nt:unstructured"
                              text="Gastronomy"
                              value="Gastronomy"/>
                      </items>
                  </iconActivity>
                  <nameActivity
	                  cq:showOnCreate="{Boolean}true"
	                  jcr:primaryType="nt:unstructured"
	                  sling:orderBefore="tags"
	                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
	                  fieldLabel="Name"
	                  required="{Boolean}true"
	                  name="./nameActivity"
	                  renderReadOnly="{Boolean}true"/>
                  <titleActivity
	                  cq:showOnCreate="{Boolean}true"
	                  jcr:primaryType="nt:unstructured"
	                  sling:orderBefore="tags"
	                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
	                  fieldLabel="Title"
	                  required="{Boolean}true"
	                  name="./titleActivity"
	                  renderReadOnly="{Boolean}true"/>
	              <descriptionActivity
	                  cq:showOnCreate="{Boolean}true"
	                  jcr:primaryType="nt:unstructured"
	                  sling:orderBefore="tags"
	                  sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
	                  fieldLabel="Description"
	                  maxlength="{Long}150"
	                  required="{Boolean}true"
	                  name="./descriptionActivity"
	                  renderReadOnly="{Boolean}true"/>
	              <imageActivity
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                      fieldDescription="558x 04 px or 368x134 px"
                      fieldLabel="Image"
                      name="./imageActivity"
                      rootPath="/content/dam"/>
                </items>
              </column>
             </items>
             </activity>
            </items>
  </tabs>
  </items>
 </content>
</jcr:root>